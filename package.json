{
    "name": "@yc-w-cn/arxiv-mcp-server",
    "version": "1.1.6",
    "description": "一个基于arxiv的论文解读器，将arxiv的论文转为通俗易懂的文章和语音",
    "main": "build/index.js",
    "bin": {
        "arxiv-mcp-server": "build/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsc && chmod +x build/index.js",
        "start": "node build/index.js",
        "dev": "tsx src/index.ts",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "build/**/*",
        "README.md"
    ],
    "keywords": [
        "mcp",
        "arxiv",
        "paper",
        "ai",
        "translation",
        "chinese",
        "tts",
        "academic",
        "research"
    ],
    "author": {
        "name": "yzfly",
        "email": "yz.liu.me@gmail.com",
        "url": "https://github.com/yzfly"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yzfly/arxiv-mcp-server.git"
    },
    "bugs": {
        "url": "https://github.com/yzfly/arxiv-mcp-server/issues"
    },
    "homepage": "https://github.com/yzfly/arxiv-mcp-server#readme",
    "dependencies": {
        "@agentic/arxiv": "^7.6.9",
        "@modelcontextprotocol/sdk": "^1.22.0",
        "axios": "^1.13.2",
        "pdf-parse": "^2.4.5",
        "pdfreader": "^3.0.8",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@types/pdf-parse": "^1.1.5",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
